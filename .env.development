# HowlerOps Development Environment Configuration

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
APP_NAME=HowlerOps (Dev)
APP_VERSION=1.0.0-dev

# Frontend configuration
FRONTEND_PORT=5173
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development PostgreSQL Database
POSTGRES_HOST=postgres-dev
POSTGRES_PORT=5432
POSTGRES_DB=sqlstudio_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password

# Database connection pool settings
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_ACQUIRE_TIMEOUT=20000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis session configuration
SESSION_SECRET=dev-session-secret
SESSION_MAX_AGE=86400000
SESSION_SECURE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password hashing
BCRYPT_SALT_ROUNDS=10

# API Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILES=3
LOG_MAX_SIZE=10485760

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus metrics (disabled in dev by default)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Performance monitoring
APM_ENABLED=false

# Error tracking
SENTRY_ENABLED=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# PM2 clustering (single instance for development)
PM2_INSTANCES=1
PM2_MAX_MEMORY_RESTART=256M

# Compression (disabled for easier debugging)
COMPRESSION_ENABLED=false

# Static file serving
STATIC_MAX_AGE=0
STATIC_GZIP_ENABLED=false

# =============================================================================
# FEATURES CONFIGURATION
# =============================================================================

# File upload configuration
UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES=sql,csv,json,txt,log
UPLOAD_DESTINATION=./uploads

# Query execution (relaxed limits for development)
QUERY_TIMEOUT=60000
QUERY_MAX_ROWS=50000
QUERY_CACHE_ENABLED=false
QUERY_CACHE_TTL=60

# WebSocket configuration
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=15000
WS_MAX_CONNECTIONS=100

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development specific settings
DEV_HOT_RELOAD=true
DEV_CORS_ORIGIN=http://localhost:5173
DEV_LOG_SQL=true
DEV_MOCK_AUTH=false
DEV_AUTO_MIGRATIONS=true
DEV_SEED_DATA=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email configuration (mock in development)
EMAIL_ENABLED=false
EMAIL_SERVICE=mock

# Cloud storage (disabled in development)
CLOUD_STORAGE_ENABLED=false